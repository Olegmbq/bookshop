doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Oleg & Neuro Code Studio — Brand Kit
    link(rel="icon" type="image/png" href="favicon.png")

    // 🔗 Путь к стилям — GitHub Pages vs Vercel
    if vercel
      link(rel="stylesheet" href="brand/assets/styles/main.css")
    else
      link(rel="stylesheet" href="/bookshop/brand/assets/styles/main.css")

  body
    main
      h1 Oleg & Neuro Code Studio — Brand Kit
      p Crafted in neon & harmony ✨

      // 💎 Путь к логотипу
      if vercel
        img(src="brand/assets/logo_neon_holo.png" alt="Logo" class="logo")
      else
        img(src="/bookshop/brand/assets/logo_neon_holo.png" alt="Logo" class="logo")

    // ⚙️ Webpack-инжект
    != htmlWebpackPlugin.tags.headTags
    != htmlWebpackPlugin.tags.bodyTags
