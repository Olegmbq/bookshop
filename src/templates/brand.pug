doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Oleg & Neuro Code Studio — Brand Kit
    link(rel="icon" type="image/png" href="/favicon.png")
    link(rel="stylesheet" href="/brand/assets/styles/main.css")
    style.
      body {
        background: radial-gradient(circle at center, #0a0a0a 0%, #000 100%);
        color: #fff;
        font-family: "Poppins", sans-serif;
        text-align: center;
        padding: 60px 20px;
      }
      h1 {
        font-size: 2.4rem;
        color: #fff;
        text-shadow: 0 0 20px #00ffff, 0 0 40px #ff00ff;
        margin-bottom: 10px;
      }
      p {
        font-size: 1.2rem;
        color: #ccc;
        text-shadow: 0 0 10px #00ffff;
      }
      img {
        margin-top: 30px;
        width: 180px;
        filter: drop-shadow(0 0 10px #00ffff);
      }

  body
    main
      h1 Oleg & Neuro Code Studio — Brand Kit
      p Crafted in neon & harmony ✨
      img.logo(src="/brand/assets/logo_neon_holo.png" alt="Logo")
